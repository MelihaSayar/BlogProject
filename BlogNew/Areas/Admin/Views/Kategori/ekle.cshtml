@model BlogNew.EF.Kategori
@{
    ViewBag.Title = "ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-md-6">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kategori Ekle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        @using (Html.BeginForm("ekle", "Kategori", FormMethod.Post, new { }))
        {
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Kategori Adı</label>
                    @Html.EditorFor(model=> model.KategoriAdi, new { htmlAttributes = new {@class="form-control",placeholder="Kategori Adı"}})
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Sıra</label>
                    @Html.EditorFor(model => model.Sira, new { htmlAttributes = new { @class = "form-control", placeholder = "Kategori Sırası" } })
                </div>
                
                
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kategori Ekle</button>
            </div>
        }
        
    </div>
  
</div>